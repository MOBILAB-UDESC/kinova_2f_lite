<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:include filename="$(find kinova_2f_lite_description)/urdf/macros.urdf.xacro" />

    <xacro:property name="finger_to_control" value="right_finger_bottom_joint"/>

    <xacro:macro name="load_gripper" params="
        *origin
        parent
        prefix
        sim_gazebo">

        <!-- Tool frame used by the arm -->
        <link name="${prefix}tool_frame"/>
        <joint name="${prefix}tool_frame_joint" type="fixed">
            <origin rpy="0 0 1.57079632679" xyz="0 0 0.130" />
            <parent link="${prefix}${parent}" />
            <child link="${prefix}tool_frame" />
            <axis xyz="0 0 0" />
        </joint>

        <!-- Gripper description -->
        <joint name="${prefix}gripper_base_joint" type="fixed">
            <origin rpy="0 0 0" xyz="0 0 0" />
            <parent link="${prefix}${parent}" />
            <child link="${prefix}gripper_base_link" />
            <axis xyz="0 0 0" />
        </joint>

        <link name="${prefix}gripper_base_link">
            <inertial>
                <origin rpy="0 0 0" xyz="4.03E-06 1.08E-05 0.041397" />
                <mass value="0.1395" />
                <inertia
                    ixx="0.00011614" ixy="1E-08" ixz="4E-08"
                    iyy="0.00010327" iyz="0"
                    izz="9.707E-05" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/gripper_base_link.STL" />
                </geometry>
                <material name="">
                    <color rgba="0.803 0.824 0.820 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/gripper_base_link.STL" />
                </geometry>
            </collision>
        </link>

        <link name="${prefix}right_finger_prox_link">
            <inertial>
                <origin rpy="0 0 0" xyz="0.020257 0.0063483 6.991E-05" />
                <mass value="0.018385" />
                <inertia
                    ixx="2.29E-06" ixy="1.43E-06" ixz="0"
                    iyy="4.56E-06" iyz="0"
                    izz="4.77E-06" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/right_finger_prox_link.STL" />
                </geometry>
                <material name="">
                    <color rgba="0.803 0.824 0.820 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/right_finger_prox_link.STL" />
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}right_finger_bottom_joint" type="revolute">
            <!-- <origin rpy="0 1.5708 0" xyz="0 -0.030501 0.070003" /> -->
            <origin xyz="0 -0.030501 0.070003" rpy="1.571 0.611 1.571" />
            <parent link="${prefix}gripper_base_link" />
            <child link="${prefix}right_finger_prox_link" />
            <!-- <axis xyz="0 0 1" /> -->
            <axis xyz="0 0 -1" />
            <limit lower="${min_right_finger_bottom_joint_pos}" upper="${max_right_finger_bottom_joint_pos}"
                    effort="${right_finger_bottom_joint_effort}" velocity="${right_finger_bottom_joint_vel}" />
            <dynamics damping="${right_finger_bottom_joint_damping}" friction="${right_finger_bottom_joint_friction}"/>
        </joint>

        <link name="${prefix}right_finger_dist_link">
            <inertial>
                <origin rpy="0 0 0" xyz="0.018488 0.0011091 0" />
                <mass value="0.010748" />
                <inertia
                    ixx="6.3E-07" ixy="3.2E-07" ixz="0"
                    iyy="1.83E-06" iyz="0"
                    izz="1.61E-06" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/right_finger_dist_link.STL" />
                </geometry>
                <material name="">
                    <color rgba="0 0.055 0.525 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/right_finger_dist_link.STL" />
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}right_finger_tip_joint" type="revolute">
            <mimic joint="${prefix}right_finger_bottom_joint" multiplier="-0.676" offset="0.149" />
            <!-- <mimic joint="${prefix}right_finger_bottom_joint" multiplier="-0.276" offset="-0.1" /> -->
            <origin rpy="0 0 0" xyz="-0.045636 0.020423 0" />
            <parent link="${prefix}right_finger_prox_link" />
            <child link="${prefix}right_finger_dist_link" />
            <axis xyz="0 0 1" />
            <limit lower="${min_right_finger_tip_joint_pos}" upper="${max_right_finger_tip_joint_pos}"
                    effort="${right_finger_tip_joint_effort}" velocity="${right_finger_tip_joint_vel}" />
            <dynamics damping="${right_finger_tip_joint_damping}" friction="${right_finger_tip_joint_friction}"/>
        </joint>

        <link name="${prefix}left_finger_prox_link">
            <inertial>
                <origin rpy="0 0 0" xyz="0.020257 0.0063483 6.99E-05" />
                <mass value="0.018385" />
                <inertia
                    ixx="2.29E-06" ixy="1.43E-06" ixz="0"
                    iyy="4.56E-06" iyz="0"
                    izz="4.77E-06" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/left_finger_prox_link.STL" />
                </geometry>
                <material name="">
                    <color rgba="0.803 0.824 0.820 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/left_finger_prox_link.STL" />
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}left_finger_bottom_joint" type="revolute">
            <mimic joint="${prefix}right_finger_bottom_joint" multiplier="1.0" offset="0.0" />
            <origin xyz="0 0.0305 0.070003" rpy="-1.571 0.611 -1.571" />
            <!-- <origin rpy="0 1.5708 0" xyz="0 0.0305 0.070003" /> -->
            <parent link="${prefix}gripper_base_link" />
            <child link="${prefix}left_finger_prox_link" />
            <axis xyz="0 0 1" />
            <limit lower="${min_left_finger_bottom_joint_pos}" upper="${max_left_finger_bottom_joint_pos}"
                    effort="${left_finger_bottom_joint_effort}" velocity="${left_finger_bottom_joint_vel}" />
            <dynamics damping="${left_finger_bottom_joint_damping}" friction="${left_finger_bottom_joint_friction}"/>
        </joint>

        <link name="${prefix}left_finger_dist_link">
            <inertial>
                <origin rpy="0 0 0" xyz="-0.018488 0.0011091 0" />
                <mass value="0.010748" />
                <inertia
                    ixx="6.3E-07" ixy="3.2E-07" ixz="0"
                    iyy="1.83E-06" iyz="0"
                    izz="1.61E-06" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/left_finger_dist_link.STL" />
                </geometry>
                <material name="">
                    <color rgba="0 0.055 0.525 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://kinova_2f_lite_description/meshes/left_finger_dist_link.STL" />
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}left_finger_tip_joint" type="revolute">
            <mimic joint="${prefix}right_finger_bottom_joint" multiplier="-0.676" offset="0.149" />
            <!-- <mimic joint="${prefix}right_finger_bottom_joint" multiplier="-0.276" offset="-0.1" /> -->
            <origin rpy="0 0 0" xyz="-0.045636 -0.020423 6.9901E-05" />
            <parent link="${prefix}left_finger_prox_link" />
            <child link="${prefix}left_finger_dist_link" />
            <axis xyz="0 0 -1" />
            <limit lower="${min_left_finger_tip_joint_pos}" upper="${max_left_finger_tip_joint_pos}"
                    effort="${left_finger_tip_joint_effort}" velocity="${left_finger_tip_joint_vel}" />
            <dynamics damping="${left_finger_tip_joint_damping}" friction="${left_finger_tip_joint_friction}"/>
        </joint>

        <xacro:include filename="$(find kinova_2f_lite_description)/urdf/ros2_control/kinova_2f_lite_ros2_control.xacro" />
        <xacro:kinova_2f_lite_ros2_control prefix="${prefix}" sim_gazebo="${sim_gazebo}" />

        <xacro:if value="${sim_gazebo}">
            <xacro:include filename="$(find kinova_2f_lite_description)/urdf/gz/kinova_2f_lite.gazebo.xacro" />
            <xacro:kinova_2f_lite_gazebo prefix="${prefix}" />
        </xacro:if>

    </xacro:macro>

</robot>